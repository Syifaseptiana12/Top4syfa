<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    >

    <LinearLayout
        android:id="@+id/petunjuk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/petunjukPengguna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Petunjuk Bagi Pengguna" />

        <ImageView
            android:id="@+id/panah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="155dp"
            android:src="@drawable/panah"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pembaruan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/petunjuk"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pembaruanVersi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Periksa Pembaruan"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_marginLeft="155dp">
            <TextView
                android:id="@+id/versi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Versi Saat Ini:"
                android:textColor="@color/white"
                android:textSize="9sp" />
            <TextView
                android:id="@+id/angkaVersi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9sp"
                android:textColor="@color/white"
                android:text="V1.3.2.0"/>

        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:id="@+id/umpan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pembaruan"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/umpanBalik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Umpan Balik"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/gambarPanah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="240dp"
            android:src="@drawable/panah" />


    </LinearLayout>

</RelativeLayout>



